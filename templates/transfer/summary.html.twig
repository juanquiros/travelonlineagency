{% extends 'base.html.twig' %}

{% block title %}Resumen de traslado{% endblock %}

{% block body %}
<section class="container py-5">
    <h1 class="mb-4">Resumen de tu traslado</h1>
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="h5">Datos del pasajero</h2>
                    <ul class="list-unstyled">
                        <li><strong>Nombre:</strong> {{ solicitud.nombrePasajero }}</li>
                        <li><strong>Correo:</strong> {{ solicitud.emailPasajero }}</li>
                        {% if solicitud.telefonoPasajero %}
                            <li><strong>Teléfono:</strong> {{ solicitud.telefonoPasajero }}</li>
                        {% endif %}
                    </ul>
                    <h2 class="h5 mt-3">Itinerario</h2>
                    <ul class="list-group list-group-flush">
                        {% for destino in solicitud.destinos %}
                            <li class="list-group-item">{{ destino.destino.nombre }}</li>
                        {% else %}
                            <li class="list-group-item text-muted">Aún no se registraron destinos.</li>
                        {% endfor %}
                    </ul>
                    <div class="mt-3">
                        <div><strong>Arribo:</strong> {{ solicitud.arribo ? solicitud.arribo|date('d/m/Y H:i') : 'Sin dato' }}</div>
                        <div><strong>Salida:</strong> {{ solicitud.salida ? solicitud.salida|date('d/m/Y H:i') : 'Sin dato' }}</div>
                        <div><strong>Total:</strong> ${{ solicitud.precioTotal }}</div>
                    </div>
                    <div class="mt-3">
                        <strong>Estado:</strong> {% include 'administrador/transfer/status_badge.html.twig' with {estado: solicitud.estado} %}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h5">Realizar pago</h2>
                    <p class="text-muted">Seleccioná tu método de pago preferido.</p>
                    <a class="btn btn-primary w-100 mb-2" href="{{ path('mercadopago_pay_transfer', {id: solicitud.id}) }}">Pagar con Mercado Pago</a>
                    <a class="btn btn-outline-secondary w-100" href="{{ path('paypal_pay_transfer', {id: solicitud.id}) }}">Pagar con PayPal</a>
                </div>
            </div>
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="h6">Código de seguimiento</h2>
                    <p class="mb-1"><strong>{{ solicitud.tokenSeguimiento }}</strong></p>
                    <p class="small text-muted">Compartilo con el chofer para que acceda a los detalles y estados del viaje.</p>
                    <a class="btn btn-link p-0" href="{{ path('app_transfer_tracking', {token: solicitud.tokenSeguimiento}) }}">Ver seguimiento</a>
                    <a class="btn btn-link p-0" href="{{ path('app_transfer_pdf', {token: solicitud.tokenSeguimiento}) }}" target="_blank">Descargar PDF</a>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{ titulo }}{% endblock %}

{% block body %}
<div class="row mt-5">
    <div class="col-md-4"></div>
    <div class="col-md-4 ">
        <h1 class="m-3">{{ titulo }}</h1>
        <hr>
    </div>
    <div class="col-md-4"></div>
</div>
    <section>
        <div class="row mb-5">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="accordion accordion-flush mb-5" id="accordionPreguntasFrecuentes">

                    {% if preguntas %}
                        {% for pregunta in preguntas %}
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse{{ loop.index  }}" aria-expanded="false" aria-controls="flush-collapse{{ loop.index  }}">
                                        <strong>{{ pregunta.titulo }}</strong>
                                    </button>
                                </h2>
                                <div id="flush-collapse{{ loop.index  }}" class="accordion-collapse collapse" data-bs-parent="#accordionPreguntasFrecuentes">
                                    <div class="accordion-body">
                                        {{ pregunta.respuesta | raw }}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>

            </div>
            <div class="col-md-4"></div>
        </div>
    </section>
{% endblock %}

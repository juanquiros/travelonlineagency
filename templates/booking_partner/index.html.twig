{% extends 'base.html.twig' %}

{% block title %}Panel de partners{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-1">Mis servicios de reserva</h1>
                <p class="text-muted mb-0">Gestioná los servicios publicados en Travel Online Agency.</p>
            </div>
            <a class="btn btn-primary" href="{{ path('app_booking_partner_service_new') }}">
                <i class="bi bi-plus-lg me-1"></i> Nuevo servicio
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">{{ message }}</div>
        {% endfor %}

        {% if bookings is empty %}
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-5">
                    <h2 class="h5 mb-3">Aún no tenés servicios cargados</h2>
                    <p class="text-muted">Creá tu primer servicio para que el equipo de Travel Online Agency pueda aprobarlo y comenzar a recibir reservas.</p>
                    <a class="btn btn-outline-primary" href="{{ path('app_booking_partner_service_new') }}">Crear servicio</a>
                </div>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table align-middle shadow-sm">
                    <thead class="table-light">
                    <tr>
                        <th>Servicio</th>
                        <th>Estado</th>
                        <th>Disponibles</th>
                        <th>Vigencia</th>
                        <th>Reservas</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for booking in bookings %}
                        <tr>
                            <td>
                                <strong>{{ booking.nombre ?: 'Sin título' }}</strong>
                                <div class="small text-muted">Código #{{ booking.id }}</div>
                            </td>
                            <td>
                                {% if booking.habilitado %}
                                    <span class="badge text-bg-success">Publicado</span>
                                {% else %}
                                    <span class="badge text-bg-secondary">Borrador</span>
                                {% endif %}
                            </td>
                            <td>{{ booking.disponibles }}</td>
                            <td>
                                {% if booking.validoHasta %}
                                    {{ booking.validoHasta|date('d/m/Y H:i') }}
                                {% else %}
                                    <span class="text-muted">Sin fecha límite</span>
                                {% endif %}
                            </td>
                            <td>{{ booking.solicitudesReserva|length }}</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_booking_partner_service_reservations', {id: booking.id}) }}">
                                        <i class="bi bi-calendar-week"></i> Reservas
                                    </a>
                                    <a class="btn btn-outline-primary btn-sm" href="{{ path('app_booking_partner_service_edit', {id: booking.id}) }}">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
{% endblock %}

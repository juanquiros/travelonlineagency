{% extends 'administrador/base.html.twig' %}

{% block title %}Panel - Mensajes{% endblock %}

{% block body %}
    <div class="" style="background-color: white; box-shadow: 2px 2px 2px rgba(0,0,0,0.3)">
        <div class="row" >
            <div class="col-md-3"></div>
            <div class="col-md-6 pt-5" style=" min-width: 410px !important;">
                <h1>Mensajes</h1>
            </div>
            <div class="col-md-3"></div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8 p-5" style="text-align: left; min-width: 410px !important;">
                <p style="color: orangered">Mensajes sin respuesta: {% if sinrespuesta %} {{ sinrespuesta | length }}{% else %}0{% endif %}</p>
                <h3 class="mb-3">Mensajes sin respuesta</h3>
                <hr>
                <table class="table" style="box-shadow: 1px 1px 4px rgba(0,0,0,0.4 )">
                    <thead>
                    <tr>
                        <th scope="col">N°</th>
                        <th scope="col">Email</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Respuesta</th>
                        <th scope="col">Acciones</th>
                    </tr>
                    </thead>
                    <tbody class="table-group-divider">
                    {% for mensaje in sinrespuesta %}
                        <tr>
                            <td>{{ mensaje.id }}</td>
                            <td>{{ mensaje.email }}</td>
                            <td>{{ mensaje.getCreatedAt | date("d/m/Y H:i","America/Argentina/Buenos_Aires") }}</td>
                            <td>{% if mensaje.getRespuestasMensaje | length > 0 %}Si{% else %}No{% endif %}</td>
                            <td><a href="/administrador/mensaje" >ir</a></td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
                <h3 class="mb-3">Bandeja de entrada (Todos)</h3>
                <hr>
                <table class="table" style="box-shadow: 1px 1px 4px rgba(0,0,0,0.4 )">
                    <thead>
                    <tr>
                        <th scope="col">N°</th>
                        <th scope="col">Email</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Respuesta</th>
                        <th scope="col">Acciones</th>
                    </tr>
                    </thead>
                    <tbody class="table-group-divider">
                    {% for mensaje in mensajes %}
                        <tr>
                            <td>{{ mensaje.id }}</td>
                            <td>{{ mensaje.email }}</td>
                            <td>{{ mensaje.getCreatedAt | date("d/m/Y H:i","America/Argentina/Buenos_Aires") }}</td>
                            <td>{% if mensaje.getRespuestasMensaje | length > 0 %}Si{% else %}No{% endif %}</td>
                            <td><a href="/administrador/mensaje" >ir</a></td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
{% endblock %}

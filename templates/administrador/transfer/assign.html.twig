{% extends 'administrador/base.html.twig' %}

{% block title %}Asignar chofer{% endblock %}

{% block body %}
<div class="card shadow-sm">
    <div class="card-body">
        <h1 class="h5 mb-3">Asignar chofer al traslado #{{ solicitud.id }}</h1>
        <p class="text-muted mb-4">{{ solicitud.nombrePasajero }} - {{ solicitud.emailPasajero }}</p>
        {{ form_start(form) }}
        {{ form_row(form.driver) }}
        {{ form_row(form.notas) }}
        <button class="btn btn-primary" type="submit">Asignar chofer</button>
        {{ form_end(form) }}
        <a class="btn btn-link mt-3" href="{{ path('app_admin_transfer_requests') }}">Volver a solicitudes</a>
    </div>
</div>
{% endblock %}

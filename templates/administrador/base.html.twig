<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Panel admin{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% block meta %}
            <meta name="description" content="Panel Administrador">
            <meta property="og:image" content="{{ absolute_url(asset('img/'~ plataforma.logo)) }}" />
        {% endblock %}

        <meta property="og:url" content="{{  absolute_url(path('app_inicio')) }}" />

        <link rel="icon" href="{{  absolute_url(asset('/'~ plataforma.icono)) }}">



        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
            <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100..900;1,100..900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
            <link href="{{ asset('styles/panel.css') }}" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.min.js" ></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
            <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
            <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>

            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="{{ asset('/tinymce/js/tinymce/tinymce.min.js') }}" referrerpolicy="origin"></script>

        {% endblock %}
    </head>
    <body>
    <div class="menu">
        <ion-icon name="menu-outline"></ion-icon>
        <ion-icon name="close-outline"></ion-icon>
    </div>

    <div class="barra-lateral">
        <div>
            <div class="nombre-pagina">
                <img style="width: 3rem;" id="logo" src="{{ asset('img/'~ plataforma.logo) }}" alt="">
                <span>Panel Admin</span>
            </div>
        </div>

        <nav class="navegacion">
            <ul>
                <li>
                    <a href="{{ path('app_inicio') }}" target="_blank">
                        <ion-icon name="planet-outline"></ion-icon>
                        <span>Ir a la web</span>
                    </a>
                </li>
                <li>
                    <a {% if menu['dashboard'] %}id="inbox"{% endif %} href="{{ path('app_administrador_home') }}">
                        <ion-icon name="podium-outline"></ion-icon>
                        <span>DashBoard</span>
                    </a>
                </li>
                <li>
                    <a {% if menu['notificaciones'] %}id="inbox"{% endif %} href="{{ path('app_administrador_notificaciones') }}">
                        <ion-icon name="notifications-outline"></ion-icon>
                        <span>Notificaciones</span>
                    </a>
                </li>
                <li>
                    <a hidden {% if menu['mensajes'] %}id="inbox"{% endif %} href="/administrador/mensajes">
                        <ion-icon name="chatbubble-ellipses-outline"></ion-icon>
                        <span>Mensajes</span>
                    </a>
                </li>
                <li style="display: flex; flex-direction: column">
                    <hr>
                    <span>Solicitudes</span>
                    <ul>
                        <li>
                            <a {% if menu['reservas'] %}id="inbox"{% endif %} href="{{ path('app_administrador_bookings') }}">
                                <ion-icon name="receipt-outline"></ion-icon>
                                <span>Booking</span>
                            </a>
                        </li>
                        <li hidden>
                            <a {% if menu['traslados'] %}id="inbox"{% endif %} href="{{ path('app_reservas') }}">
                                <ion-icon name="trail-sign-outline"></ion-icon>
                                <span>Traslado</span>
                            </a>
                        </li>
                    </ul>
                </li>

                <li style="display: flex; flex-direction: column">
                    <hr>
                    <span>Servicios</span>
                    <ul>
                        <li hidden>
                            <a {% if menu['s_traslados'] %}id="inbox"{% endif %} href="#">
                                <ion-icon name="car-outline"></ion-icon>
                                <span>Traslado</span>
                            </a>
                        </li>
                        <li>
                            <a {% if menu['s_reservas'] %}id="inbox"{% endif %} href="{{ path('app_service_booking') }}">
                                <ion-icon name="document-text-outline"></ion-icon>
                                <span>Booking</span>
                            </a>
                        </li>
                        <li>
                            <a {% if menu['s_preguntas'] %}id="inbox"{% endif %} href="{{ path('app_plataforma_preguntas') }}">
                                <ion-icon name="document-text-outline"></ion-icon>
                                <span>FAK's</span>
                            </a>
                        </li>
                        <li>
                            <a {% if menu['partners'] %}id="inbox"{% endif %} href="{{ path('app_admin_partners') }}">
                                <ion-icon name="people-outline"></ion-icon>
                                <span>Partners</span>
                            </a>
                        </li>
                    </ul>
                    <hr>
                </li>

                <li>
                    <a {% if menu['configuraciones'] %}id="inbox"{% endif %} href="{{ path('app_admin_configuraciones') }}">
                        <ion-icon name="construct-outline"></ion-icon>
                        <span>Configuraciones</span>
                    </a>
                </li>
                <li>
                    <a {% if menu['balance'] %}id="inbox"{% endif %} href="{{ path('app_admin_balance') }}">
                        <ion-icon name="wallet-outline"></ion-icon>
                        <span>Balance</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div>
            <div class="linea"></div>

            <div class="modo-oscuro" hidden>
                <div class="info">
                    <ion-icon name="moon-outline"></ion-icon>
                    <span>Drak Mode</span>
                </div>
                <div class="switch">
                    <div class="base">
                        <div class="circulo"></div>
                    </div>
                </div>
            </div>

            <div class="usuario">
                <img src="{{ asset('img/avatar-user-x640.jpg') }}" alt="">
                <div class="info-usuario">
                    <div class="nombre-email">
                        <span class="nombre">{{ usuario.nombre }} Admini</span>
                        <span class="email">{{ usuario.email }}</span>
                    </div>
                    <ion-icon name="ellipsis-vertical-outline"></ion-icon>
                </div>
            </div>
        </div>

    </div>


    <main>
        {% block body %}{% endblock %}
    </main>


    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="{{ asset('panel.js') }}"></script>


    <script>
        AOS.init();
    </script>
    </body>
</html>

{% extends 'administrador/base.html.twig' %}

{% block title %}Panel - Mensajes{% endblock %}

{% block body %}
    <div class="" style="background-color: white; box-shadow: 2px 2px 2px rgba(0,0,0,0.3)">
        <div class="row" >
            <div class="col-md-3"></div>
            <div class="col-md-6 pt-5" style=" min-width: 410px !important;">
                <h1>Notificaciones</h1>
            </div>
            <div class="col-md-3"></div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8 p-5" style="text-align: left; min-width: 410px !important;">
                <div
                    data-controller="push-notifications"
                    data-push-notifications-register-url-value="{{ path('app_notificacion_registrar') }}"
                    data-push-notifications-worker-path-value="{{ asset('sw.js') }}"
                    data-push-notifications-application-server-key-value="{{ vapidPublicKey }}"
                    data-push-notifications-success-label-value="Notificaciones habilitadas"
                    data-push-notifications-loading-label-value="Activando notificaciones..."
                    data-push-notifications-denied-label-value="No se activaron las notificaciones."
                    data-push-notifications-unsupported-label-value="Las notificaciones no estÃ¡n disponibles en este navegador."
                >
                    <button type="button" class="btn btn-secondary" data-push-notifications-target="button">
                        <i class="bi bi-bell"></i> Habilitar notificaciones de administrador
                    </button>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
{% endblock %}

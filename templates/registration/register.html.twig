{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h1>Register</h1>

            {{ form_errors(registrationForm) }}

            {% for message in app.flashes('success') %}
                <div class="alert alert-success" role="alert">{{ message }}</div>
            {% endfor %}

            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.nombre) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}
            {% if forcePartnerRequest %}
                <div class="alert alert-info small">Estás completando el formulario exclusivo para partners. El equipo revisará tu solicitud antes de habilitar el acceso al panel.</div>
            {% endif %}
            {% if registrationForm.solicitarPartner is defined %}
                {{ form_row(registrationForm.solicitarPartner) }}
            {% endif %}
            {% if driverMode %}
                <div class="alert alert-info small">
                    Completa tus datos de chofer. Un administrador revisará tu solicitud antes de habilitar el acceso al panel de viajes.
                </div>
                {{ form_row(registrationForm.driverDocumento) }}
                {{ form_row(registrationForm.driverTelefono) }}
                {{ form_row(registrationForm.driverPatente) }}
                {{ form_row(registrationForm.driverModeloVehiculo) }}
                {{ form_row(registrationForm.driverNotas) }}
                {{ form_row(registrationForm.driverFoto) }}
            {% endif %}

            <button type="submit" class="btn btn-success  w-100">Register</button>
            {{ form_end(registrationForm) }}
        </div>
        <div class="col-md-4"></div>
    </div>

{% endblock %}
